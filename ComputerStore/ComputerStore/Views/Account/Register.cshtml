@model UI_ComputerStore.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<link href="~/css/register-page.css" rel="stylesheet" />

<div class="content-div">

    <h1>Register</h1>

    <form asp-action="Register" id="form-container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input id="personal-data-imp" asp-for="Surname" autocomplete="off" placeholder="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger error-message"></span>
        </div>
        <div class="form-group">
            <input id="personal-data-imp" asp-for="Name" autocomplete="off" placeholder="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger error-message"></span>
        </div>
        <div class="form-group">
            <input id="personal-data-imp" asp-for="Patronymic" autocomplete="off" placeholder="Patronymic" class="form-control" />
            <span asp-validation-for="Patronymic" class="text-danger error-message"></span>
        </div>
        <div class="form-group">
            <input id="phone-imp" type="number" asp-for="PhoneNumber" autocomplete="off" placeholder="Phone number" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger error-message"></span>
        </div>


        <div class="form-group">
            <input id="mail-inp" type="email" asp-for="Email" autocomplete="off" placeholder="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger error-message"></span>
        </div>
        <div class="form-group">
            <input id="log-inp" asp-for="Login" autocomplete="off" placeholder="Login" class="form-control" />
            <span asp-validation-for="Login" class="text-danger error-message"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" autocomplete="off" placeholder="Password" class="form-control pass-inp" />
            <span asp-validation-for="Password" class="text-danger error-message"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfrimPassword" autocomplete="off" placeholder="Confirm password" class="form-control pass-inp" />
            <span asp-validation-for="ConfrimPassword" class="text-danger error-message"></span>
        </div>
        <div class="form-group">
            <input id="submit-btn" type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

</div>

@if ((string)TempData["Error"] != null)
{
    @await Html.PartialAsync("/Views/Alert/ErrorAlert.cshtml", (string)TempData["Error"])
    @TempData.Remove("Error")
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
